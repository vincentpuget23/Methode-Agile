{% extends 'base_vip.html.twig' %}

{% block body %}
	<h1>Utilisateur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('user_edit', {'id': user.id}) }}" class=" style_ac">éditer</a>

	<a href="{{ path('user_index') }}" class=" style_ab">retour à la liste</a>
	<style>
		.container {
			font-size: 1.25em;
			margin-top: 2%;
		}

		.style_ab {
			text-decoration: none;
			font-size: 30px;
			text-align: center;
			display: block;
			width: 20%;
			margin: 5% auto auto;
		}

		.style_ab:link {
			color: black;
		}

		.style_ab:visited {
			color: black;
		}

		.style_ab:focus {
			border-bottom: 1px solid;
			background: #BAE498;
		}

		.style_ab:hover {
			border-bottom: 1px solid;
			background: #D0D0D0;
		}

		.style_ab:active {
			background: #D0D0D0;
			color: #D0D0D0;
		}

		.style_ac {
			text-decoration: none;
			font-size: 30px;
			text-align: center;
			display: block;
			width: 20%;
			margin: 5% auto auto;
		}

		.style_ac:link {
			color: black;
		}

		.style_ac:visited {
			color: black;
		}

		.style_ac:focus {
			border-bottom: 1px solid;
			background: #BAE498;
		}

		.style_ac:hover {
			border-bottom: 1px solid;
			background: #D0D0D0;
		}

		.style_ac:active {
			background: #D0D0D0;
			color: #D0D0D0;
		}
		.table {
			width: 80%;
			text-align: center;
		}
		.table th,
		.table td {
			padding: 1.5rem;
			width: 80%;
		}
	</style>

{% endblock %}
